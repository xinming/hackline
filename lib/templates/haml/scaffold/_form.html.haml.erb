= semantic_form_for resource do |form|
  = form.inputs do
<% for attribute in attributes -%>
    = form.input :<%= attribute.name %>, :label => "<%= attribute.name.capitalize %>"
<% end -%>
  .actions
    %ul
      = form.commit_button
      - unless form.object.new_record?
        %li= link_to('Show', form.object, :class => 'button')
      %li= link_to('Cancel', collection_path, :class => 'button')
