%p#notice= notice

%p
  %b Tasklist:
  = @task.tasklist
%p
  %b Body:
  = @task.body
%p
  %b Creator:
  = @task.user
%p
  %b Done:
  = @task.done
%p
  %b Deadline:
  = @task.deadline
%p
  %b Started:
  = @task.started
%p
  %b Completed on:
  = @task.completed_on

- if @task.assigned_users.size > 0
  %p
    %b Assigned Users:
    %ul
      - @task.assigned_users.each do |user|
        %li= user

= link_to 'Edit', edit_resource_url(@task)
\|
= link_to 'Back', collection_url
